{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "newsletter",
      "footer-spacer",
      "vtex.menu@2.x:menu#info-kayser",
      "footer-spacer",
      "vtex.menu@2.x:menu#servicio-cliente",
      "footer-spacer",
      "vtex.menu@2.x:menu#rrss",
      "footer-spacer",
      "vtex.menu@2.x:menu#catalogo"
    ],
    "props": {
      "blockClass": "menu-footer",
      "paddingTop": 0,
      "paddingBottom": 0
    }
  },
  "footer-spacer":{
    "props": {
      "width": "7%"
    }
  },
  "newsletter":{
    "props":{
      "label": "Suscríbete al Newsletter",
      "placeholder": "Ingrese su e-mail",
      "submit": "Enviar"
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": ["vtex.menu@2.x:menu#busquedas-seo"],
    "props": {
      "blockClass": "busquedas-footer"
    }
  },
  "vtex.menu@2.x:menu#busquedas-seo":{
    "props": {
      "orientation": "horizontal"
    },
    "children": [
      "menu-item#calzon-maternal-busqueda",
      "menu-item#sosten-maternal-busqueda"
    ]
  },
  "menu-item#calzon-maternal-busqueda": {
    "props": {
      "id": "menu-item-busqueda",
      "type": "custom",
      "iconId": null,
      "highlight": false,
      "itemProps": {
        "tagTitle": "Busquedas",
        "text": "Calzón maternal"
      }
    }
  },
  "menu-item#sosten-maternal-busqueda": {
    "props": {
      "id": "menu-item-busqueda",
      "type": "custom",
      "iconId": null,
      "highlight": false,
      "itemProps": {
        "tagTitle": "Busquedas",
        "text": "Sostén maternal"
      }
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "créditos aqui",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ],
    "props":{
      "blockClass": "footer-mobile"
    }
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "creditos",
      "blockClass": "footer"
    }
  }
}
